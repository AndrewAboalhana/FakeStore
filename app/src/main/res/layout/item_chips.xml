<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:paddingHorizontal="@dimen/spacing_medium"
    android:layout_marginBottom="@dimen/spacing_normal"
    android:layout_marginTop="@dimen/spacing_medium"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chips_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checkedChip="@+id/chip_all_products"
            app:chipSpacingHorizontal="@dimen/spacing_small"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="@string/all_products" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_electronic"
                android:layout_width="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_height="wrap_content"
                android:text="@string/Electronics" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_jewelery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="@string/jewelery" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_men_clothes"
                android:layout_width="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_height="wrap_content"
                android:text="@string/men_s_clothing" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_women_clothes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="@string/women_s_clothing" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>
